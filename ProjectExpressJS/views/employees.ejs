<style>
  table,
  th,
  td {
    border: 2px solid black;
    border-collapse: separate;
  }
</style>

<html>

<head>
  <title>Employees</title>
</head>

<body>
  <h1>Employees</h1>
  <br>
  <br>
  <table>
    <tr>
      <th>EID</th>
      <th>NAME</th>
      <th>ROLE</th>
      <th>SALARY</th>
      <th>UPDATE</th>
    </tr>
    <% employees.forEach((employee)=>{%><tr>
        <td>
          <%=employee.eid%>
        </td>
        <td>
          <%=employee.ename%>
        </td>
        <td>
          <%=employee.role%>
        </td>
        <td>
          <%=employee.salary%>
        </td>
        <td>
          <a href="/employees/edit/<%= employee.eid %>">Update</a>
        </td>
      </tr>
      <%})%>
  </table>
  <br>
  <a href="/">Home</a>
</body>

</html>